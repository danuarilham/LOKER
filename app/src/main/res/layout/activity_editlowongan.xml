<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".EditLowongan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_margin="10dp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:padding="16dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/loker"/>

        <!-- Form Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Lowongan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Name Input -->
        <EditText
            android:id="@+id/etnamaperusahaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Perusahaan"
            android:singleLine="true"
            android:textSize="16dp"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:padding="12dp"
            android:background="@drawable/border1"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/etProfesi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Profesi"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/border1"
            android:layout_marginTop="8dp"/>

        <!-- Phone Input -->
        <EditText
            android:id="@+id/editTextGaji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gaji Perusahaan"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/border1"
            android:layout_marginTop="8dp"/>

        <!-- Message Input -->
        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Deskripsi dan Syarat-Syarat"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@drawable/border1"
            android:layout_marginTop="8dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btpasang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_marginStart="100sp"
            android:layout_marginEnd="100dp"
            android:backgroundTint="@color/pasang"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>
